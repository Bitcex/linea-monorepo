<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" packages="net.consensys" shutdownHook="disable" monitorInterval="2">
  <Appenders>
    <Console name="console" target="SYSTEM_OUT">
      <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %m%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="net.consensys.linea" level="DEBUG" additivity="false">
      <appender-ref ref="console" level="trace"/>
    </Logger>
    <Root level="info" additivity="true">
      <appender-ref ref="console"/>
    </Root>
  </Loggers>

</Configuration>

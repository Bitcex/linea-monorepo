{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "rootDir": "./src",
        "outDir": "dist",
        "lib": [
            "dom"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "composite": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.js"
    ]
}